<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav>
        <!-- Navigation -->
        <ul>
            <li class="nav_title">
                <a href="#"><i class="fa fa-fire" aria-hidden="true"></i>iPapers</a>
            </li>
            <li><a href="#">CALENDAR</a></li>
            <li><a href="#">FRIENDS</a></li>
            <li><a href="#">POPULAR</a></li>
            <li class="selected"><a href="#">STORIES</a></li>
            <li class="nav_search">
                <input type="text" name="search" placeholder="Search" autocomplete="off" />
                <i class="fa fa-search searchiconfix"></i>
            </li>
        </ul>
    </nav>
    <section class="sidebar">
        <a href="#">
            <div class="left_block">
                <!--<i class="fa fa-address-card-o fa-stack-1x" style="font-size: 2em; margin-top: 34px;" aria-hidden="true"></i>
                -->
                <img src="./profile1.png" width="40px" style="margin-top: 22px;" />
            </div>
        </a>
        <a href="#">
            <div class="left_block">
                <i class="fa fa-thumbs-o-up fa-stack-1x" aria-hidden="true"></i>
                <div class="blockText">LIKED NEWS</div>
            </div>
        </a>
        <a href="#">
            <div class="left_block">
                <i class="fa fa-envelope fa-stack-1x" aria-hidden="true"></i>
                <div class="blockText">MESSAGES</div>
            </div>
        </a>
        <a href="#">
            <div class="left_block">
                <i class="fa fa-users fa-stack-1x" aria-hidden="true"></i>
                <div class="blockText">FRIENDS</div>
            </div>
        </a>
    </section>

    <section class="main">
        <div class="mainSectionTitle">
            <div class="leftSide">Popular Stories</div>
            <div class="rightSide">
                <select class="time" name="time">
                    <option value="1">PAST 24 HOURS</option>
                    <option value="2">NEWEST</option>
                    <option value="3">LATEST</option>
                    <option value="4">MOST RELEVANT</option>
                </select>
            </div>
        </div>
        <div class="mainNews">
            @RenderBody()
        </div>
    </section>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
